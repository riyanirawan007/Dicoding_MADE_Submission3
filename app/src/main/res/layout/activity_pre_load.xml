<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg_gradient"
    tools:context=".view.ui.PreLoadActivity">

    <TextView
        android:id="@+id/tv_preload_app_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/colorWhite"
        android:theme="@style/LabelLogo" />

    <ProgressBar
        android:id="@+id/pbar_preload"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_preload_app_name"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/margin_10dp"
        android:padding="@dimen/margin_10dp"
        android:theme="@style/ProgressBar" />

    <TextView
        android:id="@+id/tv_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:theme="@style/LabelProgress"
        tools:text="Loading from resource x data" />

</RelativeLayout>